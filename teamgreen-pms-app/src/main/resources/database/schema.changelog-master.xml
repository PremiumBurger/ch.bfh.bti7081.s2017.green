<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1" author="vonac1">

        <!-- Tables -->
        <createTable tableName="Alarm">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="Appointment">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="Patient">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="addressId" type="BIGINT"/>

            <column name="firstName" type="VARCHAR(50)"/>
            <column name="lastName" type="VARCHAR(50)"/>
            <column name="birthDate" type="VARCHAR(50)"/>
            <column name="phone" type="VARCHAR(50)"/>
            <column name="mobile" type="VARCHAR(50)"/>
            <column name="ahvNr" type="VARCHAR(50)"/>
            <column name="email" type="VARCHAR(50)"/>
            <column name="gender" type="VARCHAR(50)"/>
        </createTable>

        <createTable tableName="HealthVisitor">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="addressId" type="BIGINT"/>

            <column name="firstName" type="VARCHAR(50)"/>
            <column name="lastName" type="VARCHAR(50)"/>
            <column name="birthDate" type="VARCHAR(50)"/>
            <column name="phone" type="VARCHAR(50)"/>
            <column name="mobile" type="VARCHAR(50)"/>
            <column name="ahvNr" type="VARCHAR(50)"/>
            <column name="email" type="VARCHAR(50)"/>
            <column name="gender" type="VARCHAR(50)"/>
        </createTable>

        <createTable tableName="Address">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="strasse" type="VARCHAR(50)"/>
            <column name="plz" type="VARCHAR(50)"/>
            <column name="city" type="VARCHAR(50)"/>
            <column name="country" type="VARCHAR(50)"/>
        </createTable>

        <!-- Zwischentabellen -->
        <createTable tableName="PatientHealthVisitor">
            <column name="patientId" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="healthVisitorId" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>